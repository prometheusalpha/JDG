{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Java Diagram Generator",
  "version": "0.1.0",
  "identifier": "com.java-diagram-generator.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Java Diagram Generator",
        "minHeight": 800,
        "minWidth": 1200
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
    }
  }
}
